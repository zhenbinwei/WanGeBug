<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">
    <com.example.weizhenbin.wangebug.views.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftSrc="@drawable/back"
        app:titleSize="16sp"
        app:titleColor="@color/colorWhite"
        app:title="@string/about_string"
        android:background="@color/colorPrimary"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/logo_round"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_version"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorGray6"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/project_brief_string"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorGray6"
                android:text="@string/project_brief_content_string"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/project_content_string"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/project_content_detail_string"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:autoLink="web"
                android:textColor="@color/colorGray6"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/developer_string"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/developer_info_string"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorGray6"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/copyright_string"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/copyright_content_string"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorGray6"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>